@model IEnumerable<MvcMyProject.Models.RoomModel>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">


<script>
    $(document).ready(function () {
        $(".z").click(function () {
            var address = $(this).attr("href");
            var res;
            $.getJSON(address, function (data) {
                alert("Successfully Added to your Favourites");
               
            });
            return false;
        });
    });
    </script>
<style>
    td {
        vertical-align:middle;
    }
</style>

<table class="table table-hover" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.roomname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.roomrent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.roomoccupancy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.roomavailability)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.roomamenities)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.roomimage1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.roomimage2)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.roomname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.roomrent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.roomoccupancy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.roomavailability)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.roomamenities)
        </td>
        <td>
           <img src=@item.roomimage1 width="150px" height="150px" />
        </td>
        <td>
            <img src=@item.roomimage2 width="150px" height="150px" />
        </td>
        <td>
            @Html.ActionLink("Add To Favourities", "addToMyFavourites", new { pgid = item.pgID,roomid = item.roomID }, new { @class = "z btn btn-sm btn-danger"})
        </td>
    </tr>
}

</table>
