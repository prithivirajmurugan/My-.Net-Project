@model IEnumerable<MvcMyProject.Models.PgModel>

@{
    ViewBag.Title = "PgList";
    Layout = "~/Views/Shared/OwnerLayout.cshtml";
}

<h2>Your List Of PGs</h2>
<script>
    $(document).ready(function () {

        var url;
        $("#dialog-edit").dialog({
            title: 'Show Room Info',
            autoOpen: false,
            resizable: false,
            height: 455,
            width: 550,
            show: { effect: 'drop', direction: 'up' },
            modal: true,
            draggable: true,
            open: function (event, ui) { $("#dialog-edit").load(url); },
            close: function (event, ui) { $("#dialog-edit").dialog('close'); }


        });
        $(".x").click(function () {

            url = $(this).attr("href");
            $("#dialog-edit").dialog('open');
            return false;

        });

    });
</script>
<div style="width:600px">
    <table align="left" class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.pgName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pgaddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pgcityid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nearbyarea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pgImagesAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.amenities)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pgDescription)
            </th>
            <th>Options</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.pgName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pgaddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pgcityid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nearbyarea)
                </td>
                <td>
                    <img src=@item.pgImagesAddress width="100px" height="100px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.amenities)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pgDescription)
                </td>
                <td>

                    @Html.ActionLink("Rooms Info", "getRoomsDetails", new { pgid = item.pgID }, new { @class = "x btn btn-danger btn-sm" })

                </td>
            </tr>
        }
    </table>
</div>

<div id="dialog-edit"></div>
